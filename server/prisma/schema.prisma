// schema.prisma

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}
  
generator client {
    provider = "prisma-client-js"
}
  
model Vev {
    id            String   @id @default(uuid())   // Use UUID for id as a string
    challangerId  String
    challangedId  String
    date          DateTime
    bookedDate    DateTime
    reason        String

    challanger    User     @relation("Challanger", fields: [challangerId], references: [id])
    challanged    User     @relation("Challanged", fields: [challangedId], references: [id])
}

model User {
    id        String      @id @default(uuid()) // Use Auto Increment for ID
    username  String      @unique
    password  String
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt

    vevsChallanged Vev[] @relation("Challanger")
    vevsChallangedBy Vev[] @relation("Challanged")
}
