{
    "name": "vevit-v4",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "server": "cd server && npm run dev",
        "client": "cd client && npm run dev",
        "dev": "concurrently \"npm run start-database\" \"npm run server\" \"npm run client\"",

        "start-database": "docker start vevit-v4",
        "stop-database": "docker stop vevit-v4",

        "test-server": "cd server && npm run test",
        "test": "npm run test-server",

        "build-server": "cd server && npm run build",
        "build-client": "cd client && npm run build",
        "build": "npm run build-server && npm run build-client"
    },
    "author": "Erik Persson",
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}
